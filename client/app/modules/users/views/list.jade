.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-bordered.table-striped
      tr(ng-repeat='user in users')
        td
          a(href='', ui-sref='app.users.view({id: user.id})') {{user.username}}
          span.text-muted {{user.email}}
          span.label.label-default(ng-repeat="role in user.roles") {{role.name}}
          span.pull-right
            .btn-group
              button.btn.btn-xs.btn-default(ui-sref='app.users.password({id:user.id})')
                i.fa.fa-key
              button.btn.btn-xs.btn-default(ui-sref='app.users.edit({id:user.id})')
                i.fa.fa-pencil
              button.btn.btn-xs.btn-danger(ng-click='delete({id:user.id})')
                i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
